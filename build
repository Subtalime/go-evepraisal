#!/bin/bash

cd $GOPATH/src/github.com/evepraisal/go-evepraisal
echo "CLONE ..."
if [ -f build ]; then
    rm -Rf *
fi
git clone --branch store_db https://github.com/Subtalime/go-evepraisal.git . 

export GO111MODULE=on ENV=dev
echo "SETUP ..."
make setup 

echo "BUILD ..."
make build 
if [ ! -f $GOPATH/bin/evepraisal ]; then
    echo "BUILD failed!"
    exit -1
fi
echo "INSTALL ..."
make install 
if [ ! -f $GOPATH/bin/evepraisal ]; then
    echo "INSTALL failed!"
    exit -1
fi

echo "MOVE BINARIES ..."
if [ ! -d /evepraisal ]; then
    mkdir /evepraisal
fi
mv $GOPATH/bin/evepraisal /evepraisal/evepraisal 
# if we RM, we can't /bin/bash
# rm -rf $GOPATH
#apk del build-dependencies 
if [ ! -d /evepraisal/db ]; then
    mkdir /evepraisal/db
fi
cd /evepraisal
echo "WHICH BASH?"
which bash
echo "Start Eve-Praisal"
./evepraisal

#WORKDIR /evepraisal/
#CMD ["./evepraisal"]
